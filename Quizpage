let currentQ = 0;
let points = { A: 0, B: 0, C: 0, D: 0 };

function startDemo() {
  currentQ = 0;
  points = { A: 0, B: 0, C: 0, D: 0 };
  document.getElementById('demo-top').style.display = 'none';
  document.getElementById('demo-question').style.display = 'block';
  showQuestion();
}

function showQuestion() {
  const q = questions[currentQ];
  const fill = ((currentQ + 1) / 5) * 100;
  document.getElementById('progress-fill').style.width = fill + '%';
  document.getElementById('progress-text').textContent = `Q${currentQ + 1} / 5`;
  document.getElementById('q-text').textContent = q.q;
  const choicesEl = document.getElementById('choices');
  choicesEl.innerHTML = '';
  q.choices.forEach((c, i) => {
    const btn = document.createElement('button');
    btn.className = 'demo-choice-btn';
    btn.textContent = c.text;
    btn.onclick = () => selectChoice(i, c.point);
    choicesEl.appendChild(btn);
  });
}

function selectChoice(idx, point) {
  const btns = document.querySelectorAll('.demo-choice-btn');
  btns[idx].classList.add('selected');
  points[point]++;
  setTimeout(() => {
    currentQ++;
    if (currentQ < 5) {
      showQuestion();
    } else {
      showLoading();
    }
  }, 400);
}

function showLoading() {
  document.getElementById('demo-question').style.display = 'none';
  document.getElementById('demo-loading').style.display = 'block';
  setTimeout(showResult, 2500);
}

function showResult() {
  document.getElementById('demo-loading').style.display = 'none';
  document.getElementById('demo-result').style.display = 'block';
  const type = determineType();
  const t = typeData[type];
  const header = document.getElementById('result-header');
  header.style.background = t.grad;
  document.getElementById('result-type-label').textContent = `ã‚¿ã‚¤ãƒ— ${type}`;
  document.getElementById('result-name').textContent = t.name;
  document.getElementById('result-def').textContent = t.def;
  document.getElementById('result-msg').textContent = t.msg;
}

function determineType() {
  const max = Math.max(points.A, points.B, points.C, points.D);
  if (points.B === max) return 'B';
  if (points.C === max) return 'C';
  if (points.D === max) return 'D';
  return 'A';
}

function resetDemo() {
  currentQ = 0;
  points = { A: 0, B: 0, C: 0, D: 0 };
  document.getElementById('demo-result').style.display = 'none';
  document.getElementById('demo-top').style.display = 'block';
}
</script>
</body>
</html>
